[mysqld]
# Custom MySQL configuration for Product Evaluation System

# Character set and collation settings
# Use utf8mb4 for full Unicode support including emojis
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Connection settings
# Maximum number of concurrent connections
max_connections = 200
# Connection timeout in seconds
connect_timeout = 60
# Interactive timeout for idle connections
interactive_timeout = 28800
# Wait timeout for non-interactive connections
wait_timeout = 28800

# InnoDB settings for better performance
# Buffer pool size (adjust based on available RAM)
innodb_buffer_pool_size = 256M
# Log file size for transaction logs
innodb_log_file_size = 64M
# Flush method for better I/O performance
innodb_flush_method = O_DIRECT
# Lock wait timeout to prevent long-running locks
innodb_lock_wait_timeout = 50

# Query cache settings (disabled in MySQL 8.0 but kept for reference)
# query_cache_type = 1
# query_cache_size = 32M

# Logging settings
# Enable general query log for debugging (disable in production)
general_log = 0
general_log_file = /var/log/mysql/general.log

# Enable slow query log to identify performance issues
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binary logging for replication (can be disabled for testing)
log_bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7

# SQL mode for strict data validation
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# Time zone setting
default_time_zone = '+00:00'

[mysql]
# Default character set for mysql client
default-character-set = utf8mb4

[client]
# Default character set for all MySQL clients
default-character-set = utf8mb4 